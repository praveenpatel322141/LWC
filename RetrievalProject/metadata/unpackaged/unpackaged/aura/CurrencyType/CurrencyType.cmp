<aura:component controller="CurrencyTypeController">
    <!--init handler event call "initialize" function on component load
        and fetch picklist values-->
    <aura:handler name="init" value="{! this }" action="{! c.initialize }"/>
    
   <!--Declare Attributes-->  
    <aura:attribute name="objInfo" type="account" default="{sobjectType : 'Currency__c'}" />
	<aura:attribute name="listCurrencyTypeOptions" type="List" default="[]"/>
    <aura:attribute name="selectedCurrencyTypeItems" type="List" default="[]"/>
  
   <!-- lightning dualListbox component -->
    <lightning:dualListbox aura:id="selectOptions"
                           name="CurrencyTypes"
                           label= "Select Currency Type" 
                           sourceLabel="Available Currency Type" 
                           selectedLabel="Selected Currency Types" 
                           options="{! v.listCurrencyTypeOptions }"
                           value="{! v.selectedCurrencyTypeItems }"
                           onchange="{! c.handleChange }"/>
    <br/>
    
    <lightning:button variant="brand" label="Selected Items" onclick="{!c.getSelectedItems }" />
</aura:component>